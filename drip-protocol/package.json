
{
  "name": "drip-protocol-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "test:testnet": "npx tsx scripts/test-testnet.ts",
    "test:testnet:extensive": "npx tsx scripts/test-testnet-extensive.ts",
    "test:integration": "npx tsx scripts/test-full-integration.ts"
  },
